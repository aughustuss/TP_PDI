<Window x:Class="TP_PDI.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP_PDI"
        mc:Ignorable="d"
        Title="Início" Height="573" Width="964">
    <Grid>
        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Height="260" Width="220" Margin="10, 10, 0, 0">
            <Button x:Name="SubmitImageButton" Content="Clique para submeter uma imagem" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30" Width="220" Click="SubmitImage"/>
            <Border Name="brdSiteLogo" 
                BorderThickness="2"
                BorderBrush="#e1e3e1"
                VerticalAlignment="Top"
                Height="220">
                <Image            
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" 
                    Stretch="Uniform"
                    Height="220"
                    Width="220"
                    x:Name="imagePicture"/>
            </Border>
        </Grid>

        <Grid Margin="0,10,10,0" Height="260" VerticalAlignment="Top" HorizontalAlignment="Right" Width="220">
            <Button IsEnabled="False" Content="Imagem resultante" Height="30" VerticalAlignment="Bottom"/>
            <Border
                BorderThickness="2"
                BorderBrush="#e1e3e1"
                VerticalAlignment="Top"
                Height="220" >
                <Image      
                    VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch"
                    Stretch="Fill"
                    Height="220" 
                    Width="220"
                    x:Name="resultImage"/>
            </Border>
        </Grid>
        <Grid x:Name="RotatedImage" Visibility="Hidden" Margin="10, 10,240,10" Height="260" Width="220" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Button IsEnabled="False" Content="Imagem resultante" Height="30" VerticalAlignment="Bottom"/>
            <Border
                BorderThickness="2"
                BorderBrush="#e1e3e1"
                VerticalAlignment="Top"
                Height="220" >
                <Image            
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Stretch="Fill"
                    Height="220" 
                    Width="220"
                    x:Name="rotationImageResult"
                    />
            </Border>
        </Grid>

        <Grid Height="50" Width="220" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,300, 10, 10">
            <TextBlock Text="Selecione uma operação" />
            <ComboBox x:Name="FilterOptions" VerticalAlignment="Bottom" Height="30" SelectionChanged="HandleProcessChange"  />
        </Grid>

        <Grid x:Name="MaskInput" Visibility="Hidden" Height="50" Width="220" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10, 0, 0, 130">
            <TextBlock Text="Informe o tamanho da máscara (Ex: 5x5)" />
            <TextBox Height="30" VerticalAlignment="Bottom" />
        </Grid>
        <Grid x:Name="ExpansionOrCompressionInput" Visibility="Hidden" Height="50" Width="220" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10, 0, 0, 130">
            <TextBlock Text="Informe os valores para A e B respectivamente (Ex: 2, 5)" />
            <TextBox Height="30" VerticalAlignment="Bottom" />
        </Grid>
        <Grid x:Name="DegreesInput" Visibility="Hidden" Height="50" Width="220" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10, 0, 0, 130">
            <TextBlock Text="Selecion o grau em que deseja girar a imagem" />
            <ComboBox x:Name="DegreesOptions" Height="30" VerticalAlignment="Bottom"  />
        </Grid>

        <Grid Height="30" Width="220" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" >
            <Button IsEnabled="True" Content="Enviar imagem" Click="ProcessImage" />
        </Grid>

        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10, 300, 10, 10">
            <Border BorderThickness="1" BorderBrush="Black">
                <Canvas x:Name="histogramCanvas" Margin="0,162,707,0" />
            </Border>
        </Grid>
    </Grid>
</Window>
